@model Events.Models.Event

<h2>Save</h2>
@using (Html.BeginForm("save", "home", FormMethod.Post, new { id = "popupForm"}))
{
    if(Model != null && Model.EventId >0)
    {
        @Html.HiddenFor(a =>a.EventId)
    }
    <div class=" form-group">
        <lable>Event Name</lable>
        @Html.TextBoxFor(a =>a.EventName, new {@class = "form-control" })
        @Html.ValidationMessageFor(a =>a.EventName)

    </div>
    <div class= "form-group">
        <lable>Location</lable>
        @Html.TextBoxFor(a => a.EventLocation, new { @class = "form-control" })
        @Html.ValidationMessageFor(a => a.EventLocation)

    </div>
    <div class= "form-group">
        <lable>Start Date</lable>
        @Html.TextBoxFor(a => a.EventStartDate, new { @class = "form-control" })

    </div>
       <div class= "form-group">
        <lable>End Date</lable>
        @Html.TextBoxFor(a => a.EventEndDate, new { @class = "form-control" })


    </div>
    <div>
        <input type="submit" value="Save"/>

    </div>

}
    